extends layout

block content
	div(style="height: 80px;")
	.tile.is-ancestor
		.tile.is-parent.is-2
		.tile.is-parent.is-vertical.is-2
			.tile.is-child.notification.button.is-primary.render-light
				<h1>Render Mode</h1>
			.tile.is-child.notification.button.edit-light.editable
				<h2>Edit Mode</h2>
			.tile.is-child.notification.button.highlight-light
				<h3>Highlight Mode</h2>
		.tile.is-parent.is-6
			.tile.is-child.box.card-expand
				.card.center.card-expand.editable
					.card-content
						.content.editable
							br
							h5.editable.render-mode#card-content “ O Romeo, Romeo! wherefore art thou Romeo? ~William Shakespeare”

					svg.highlight-bar.is-pulled-right(height="30" width="106")
						circle.highlighter-red(cx="12" cy="12" r="12")
						circle.highlighter-blue(cx="40" cy="12" r="12")
						circle.highlighter-green(cx="68" cy="12" r="12")
						circle.highlighter-yellow(cx="94" cy="12" r="12")
	.tile.is-ancestor.is-vertical
		.tile.is-parent.center
			.tile.is-child.box
				p.control.has-addons.has-addons-centered
					span.select
						select
							option (No Deck)
							option Poem Quotes
							option Another Deck
					input.input#add-deck-name(type='text', placeholder='Or Enter Deck Name')
					a.button.is-primary#add-new-deck
						| Add
		.tile.is-parent.center
			.tile.is-child.box#submit-button
				a.button.is-success
					span.icon
						i.fa.fa-check
					span Save

block scripts
	script(src="/javascript/garrettscript/card-new.js")
