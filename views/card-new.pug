extends layout

block content
	div(style="height: 80px;")
	.tile.is-ancestor
		.tile.is-parent.is-2
		.tile.is-parent.is-vertical.is-2
			.tile.is-child.notification.button.is-primary.render-light
				<h1>Render Mode</h1>
			.tile.is-child.notification.button.edit-light.editable
				<h2>Edit Mode</h2>
			.tile.is-child.notification.button.highlight-light
				<h3>Highlight Mode</h2>
		.tile.is-parent.is-6
			.tile.is-child.box.card-expand
				.card.center.card-expand.editable
					.card-content
						.content.editable
							br
							h5.render-mode “ O Romeo, Romeo! wherefore art thou Romeo? ~William Shakespeare”
	.tile.is-ancestor.is-vertical
		.tile.is-parent.center
			.tile.is-child.box
				p.control.has-addons.has-addons-centered
					span.select
						select
							option Add to Existing Decks (Default)
							option Poem Quotes
							option Another Deck
					input.input(type='text', placeholder='Or Enter Deck Name')
					a.button.is-primary
						| Add
		.tile.is-parent.center
			.tile.is-child.box
				a.button.is-success
					span.icon
						i.fa.fa-check
					span Save

block scripts
	script(src="/javascript/garrettscript/card-new.js")
