extends layout

block content
	.tile.is-ancestor.is-vertical
		.tile.is-parent.center.is-6
			.tile.is-child.box.center
				.card.center.card-expand
					.card-content
						.content.editable
							br
							h5 “ O Romeo, Romeo! wherefore art thou Romeo? ~William Shakespeare”
		.tile.is-parent.center
			.tile.is-child.box
				p.control.has-addons.has-addons-centered
					span.select
						select
							option Add to Existing Decks (Default)
							option Poem Quotes
							option Another Deck
					input.input(type='text', placeholder='Or Enter Deck Name')
					a.button.is-primary
						| Add
		.tile.is-parent.center
			.tile.is-child.box
				a.button.is-success
					span.icon
						i.fa.fa-check
					span Save

block scripts
	script(src="/javascript/garrettscript/card-new.js")
