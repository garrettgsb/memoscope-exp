extends layout

block content
	link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css', rel='stylesheet', integrity='sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1', crossorigin='anonymous')
	link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.0.28/css/bulma.css', type='text/css')
	link(rel='stylesheet', href='/stylesheets/style.css')

	link(rel="stylesheet" href="/stylesheets/solar_system/solar.css")
	link(rel='stylesheet', href='/stylesheets/style-g.css')
	link(rel='stylesheet', href='/stylesheets/style-j.css')
	link(rel='stylesheet', href='/stylesheets/style-s.css')
	.container
		.columns.is-fullheight(style="margin:120px;")
			.column.is-3
				nav.panel.box
					p.panel-heading Take A Look Through My Memoscope
					a.panel-block.button.is-info.is-fullwidth#trigger_notification
						span.icon
							i.fa.fa-space-shuttle
						span Notifications (0)
					a.panel-block.is-active.dash-display#dash-new-card-link(href="#")
						span.panel-icon
							i(class="fa fa-space-shuttle")
						p New Card
					a.panel-block.is-active.dash-display#dash-manage-cards-link(href="/cards")
						span.panel-icon
							i(class="fa fa-space-shuttle")
						p Manage Cards
					a.panel-block.is-active.dash-display#dash-manage-decks-link(href="/decks")
						span.panel-icon
							i(class="fa fa-space-shuttle")
						p Manage Decks
					a.panel-block.is-active.dash-display#dash-stats-link(href="/#")
						span.panel-icon
							i(class="fa fa-space-shuttle")
						p Stats
			.column.dash_content#dash-new-card-content.dash-hidden
				include card-new-dashboard.pug
			.column.dash_content#dash-visualization
				#universe.scale-stretched
					#galaxy
						#solar-system.earth
							#mercury.orbit
								.pos
								.planet
									dl.infos
										dt Mercury
										dd
											span
							#venus.orbit
								.pos
									.planet
										dl.infos
											dt Venus
											dd
												span
							#earth.orbit
								.pos
									.orbit
										.pos
											.moon
									.planet
										dl.infos
											dt Earth
											dd
												span
							#mars.orbit
								.pos
									.planet
										dl.infos
											dt Mars
											dd
												span
							#jupiter.orbit
								.pos
									.planet
										dl.infos
											dt Jupiter
											dd
												span
							#saturn.orbit
								.pos
									.planet
										.ring
										dl.infos
											dt Saturn
											dd
												span
							#uranus.orbit
								.pos
									.planet
										dl.infos
											dt Uranus
											dd
												span
							#neptune.orbit
								.pos
									.planet
										dl.infos
											dt Neptune
											dd
												span
							#sun
								dl.infos
									dt Sun
									dd
										span

